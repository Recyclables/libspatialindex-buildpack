#!/usr/bin/env bash
cd $1

echo "-----> Installing LIBSPATIALINDEX"
curl http://download.osgeo.org/libspatialindex/spatialindex-src-1.8.5.tar.gz -O -s
mkdir -p vendor/libspatialindex
tar -C vendor/libspatialindex -xf spatialindex-src-1.8.5.tar.gz
rm spatialindex-src-1.8.5.tar.gz

echo "-----> setting PATHS for LIBSPATIALINDEX"
mkdir -p .profile.d
cat << EOF > .profile.d/spindex.sh
export LD_LIBRARY_PATH=/app/vendor/libspatialindex/usr/local/lib:$LD_LIBRARY_PATH
export SPATIALINDEX_C_LIBRARY=libspatialindex_c.so.4
EOF

echo "-----> oki"
